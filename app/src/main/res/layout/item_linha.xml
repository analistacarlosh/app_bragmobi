<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:padding="4dp"
    android:background="#ffffff">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_action_bus"
        android:id="@+id/imgIcon"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="8dp"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="107"
        android:id="@+id/txtNumero"
        android:textStyle="normal"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/imgIcon"
        android:gravity="center_vertical"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtSentidoIda"
        android:text="CDHU Saada Nader Abi Chedid via UPA"
        android:layout_toRightOf="@+id/txtNumero"
        android:textStyle="normal"
        android:textSize="20sp"
    />
    <TextView
        android:id="@+id/txtSentidoVolta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Universidade SÃ£o Francisco"
        android:layout_toRightOf="@+id/imgIcon"
        android:layout_below="@+id/txtSentidoIda"
        android:textStyle="normal"
        android:textSize="20sp"
        />
</RelativeLayout>
